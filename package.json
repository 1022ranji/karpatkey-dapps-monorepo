{
  "private": true,
  "version": "1.0.0",
  "workspaces": {
    "packages": [
      "dapps/reports",
      "dapps/panic-button",
      "shared"
    ]
  },
  "scripts": {
    "dev:reports": "cd dapps/reports && yarn dev",
    "dev:panic-button": "cd dapps/panic-button && yarn dev",
    "dev": "yarn dev:reports & yarn dev:panic-button",
    "update:reports": "cd dapps/reports && yarn",
    "update:panic-button": "cd dapps/panic-button && yarn",
    "update:shared": "cd shared && yarn",
    "update": "yarn update:reports && yarn update:panic-button && yarn update:shared",
    "lint:staged": "yarn workspaces run lint:staged",
    "lint": "yarn workspaces run lint",
    "prepare": "husky install",
    "commit": "git-cz",
    "clean": "rm -rf node_modules && rm -rf dapps/panic-button/node_modules && rm -rf dapps/reports/node_modules && rm -rf shared/node_modules",
    "clean:locks": "rm -rf yarn.lock && rm -rf dapps/panic-button/yarn.lock && rm -rf dapps/reports/yarn.lock && rm -rf shared/yarn.lock"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
