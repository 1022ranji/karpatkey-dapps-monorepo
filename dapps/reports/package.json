{
  "name": "@karpatkey-monorepo/reports",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "next start",
    "lint:staged": "lint-staged",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,json,css,scss,md}'",
    "lint": "yarn lint:eslint && yarn lint:tsc",
    "lint:eslint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:eslint:fix": "eslint --fix 'src/**/*.{ts,tsx}'",
    "lint:tsc": "tsc -p tsconfig.json",
    "cache:dailyBalanceReports": "ts-node --project ./tsconfig.json ./src/scripts/generateCache.ts --report-name getDailyBalanceReports",
    "cache:treasuryFinancialMetrics": "ts-node --project ./tsconfig.json ./src/scripts/generateCache.ts --report-name getTreasuryFinancialMetrics",
    "cache:tokens": "ts-node --project ./tsconfig.json ./src/scripts/generateCache.ts --report-name getTokens",
    "cache:treasuryVariationMetricsDetail": "ts-node --project ./tsconfig.json ./src/scripts/generateCache.ts --report-name getTreasuryVariationMetricsDetail",
    "cache:treasuryFinancialPositions": "ts-node --project ./tsconfig.json ./src/scripts/generateCache.ts --report-name getTreasuryFinancialPositions",
    "cache:treasuryHistoricVariation": "ts-node --project ./tsconfig.json ./src/scripts/generateCache.ts --report-name getTreasuryHistoricVariation",
    "generate:cache": "yarn cache:dailyBalanceReports && yarn cache:treasuryFinancialMetrics && yarn cache:tokens && yarn cache:treasuryVariationMetricsDetail && yarn cache:treasuryFinancialPositions && yarn cache:treasuryHistoricVariation"
  },
  "dependencies": {
    "@emotion/cache": "^11.11.0",
    "@emotion/react": "^11.11.0",
    "@emotion/server": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@karpatkey-monorepo/shared": "0.1.0",
    "@mui/icons-material": "^5.11.16",
    "@mui/material": "^5.13.1",
    "@mui/x-date-pickers": "^6.5.0",
    "@types/react-copy-to-clipboard": "^5.0.4",
    "dotenv": "^16.0.3",
    "commander": "^10.0.1",
    "date-fns": "^2.30.0",
    "dayjs": "^1.11.7",
    "luxon": "^3.3.0",
    "next": "^13.4.3",
    "numbro": "^2.3.6",
    "react": "^18.2.0",
    "react-copy-to-clipboard": "^5.1.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.43.9",
    "recharts": "^2.6.2",
    "yup": "^1.1.1"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/luxon": "^3.3.0",
    "@types/node": "20.2.3",
    "@types/react": "18.2.5",
    "@types/react-dom": "18.2.4",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.7",
    "eslint": "8.41.0",
    "eslint-config-next": "13.4.3",
    "eslint-config-prettier": "^8.8.0",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "prettier-plugin-organize-imports": "^3.2.2",
    "tsc-files": "^1.1.3",
    "typescript": "5.0.4"
  },
  "lint-staged": {
    "src/**/*.+(js,ts,tsx)": [
      "eslint -c ./dapps/reports/.eslintrc.json -cache --fix",
      "tsc-files --noEmit"
    ],
    "src/**/*.{js,ts,tsx,css,md,json}": [
      "prettier --config ./.prettierrc --ignore-path ./.prettierignore --write"
    ]
  }
}
