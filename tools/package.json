{
  "name": "@karpatkey-monorepo/tools",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "lint:staged": "lint-staged",
    "format": "prettier --write 'GnosisSafe/**/*.{js,jsx,ts,tsx,json,css,scss,md}'",
    "tools:balances": "ts-node --project tsconfig.json GnosisSafe/getBalances.ts",
    "lint": "yarn lint:eslint && yarn lint:tsc",
    "lint:eslint": "eslint './**/*.{ts,tsx}'",
    "lint:eslint:fix": "eslint --fix './**/*.{ts,tsx}'",
    "lint:tsc": "tsc -p tsconfig.json"
  },
  "dependencies": {
    "@gnosis.pm/safe-apps-sdk": "^7.8.0",
    "@safe-global/safe-ethers-lib": "^1.9.2",
    "@safe-global/safe-gateway-typescript-sdk": "^3.7.0",
    "@safe-global/safe-service-client": "^1.5.2",
    "ethers": "^6.1.0",
    "luxon": "^3.3.0"
  },
  "devDependencies": {
    "@types/luxon": "^3.2.0",
    "@types/node": "18.14.6",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "eslint": "8.35.0",
    "eslint-config-next": "13.2.3",
    "eslint-config-prettier": "^8.7.0",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4",
    "prettier-plugin-organize-imports": "^3.2.2",
    "tsc-files": "^1.1.3",
    "typescript": "4.9.5"
  },
  "lint-staged": {
    "./**/*.+(js,ts,tsx)": [
      "eslint -c ./tools/.eslintrc.json -cache --fix",
      "tsc-files --noEmit"
    ],
    "./**/*.{js,ts,tsx,css,md,json}": [
      "prettier --config ./.prettierrc --write"
    ]
  }
}
