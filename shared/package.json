{
  "name": "@monorepo/shared",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "lint:staged": "lint-staged",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,json,css,scss,md}'",
    "lint": "echo 'Linting ... (TODO: add this when we have something: yarn lint:eslint && yarn lint:tsc)'",
    "lint:eslint": "eslint './**/*.{ts,tsx}'",
    "lint:eslint:fix": "eslint --fix './**/*.{ts,tsx}'",
    "lint:tsc": "tsc -p tsconfig.json"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/node": "18.14.6",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "eslint": "8.35.0",
    "eslint-config-next": "13.2.3",
    "eslint-config-prettier": "^8.7.0",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4",
    "prettier-plugin-organize-imports": "^3.2.2",
    "tsc-files": "^1.1.3",
    "typescript": "4.9.5"
  },
  "lint-staged": {
    "./**/*.+(js,ts,tsx)": [
      "eslint -c ./dapps/reports/.eslintrc.json -cache --fix",
      "tsc-files --noEmit"
    ],
    "./**/*.{js,ts,tsx,css,md,json}": [
      "prettier --config ./.prettierrc --write"
    ]
  }
}
